{
  "version": "2.0",
  "template": {
    "outputs": [
      {
        "basicCard": {
          "title": "권한 요청",
          "description": "이 작업에는 아래 권한이 필요합니다.\\n스코프: ${scopes_csv}\\n유효기간: ${ttl_minutes}분",
          "buttons": [
            {
              "action": "block",
              "label": "허용(${ttl_minutes}분)",
              "blockId": "${CONSENT_GRANT_BLOCK_ID}",
              "extra": {
                "grants": "${scopes_array}",
                "ttl": "${ttl_seconds}",
                "sessionId": "${sessionId}",
                "roomId": "${roomId}"
              }
            },
            {
              "action": "block",
              "label": "거부",
              "blockId": "${CONSENT_DENY_BLOCK_ID}",
              "extra": {
                "reason": "user_denied",
                "sessionId": "${sessionId}"
              }
            }
          ]
        }
      }
    ],
    "quickReplies": [
      {
        "action": "message",
        "label": "허용(${ttl_minutes}분)",
        "messageText": "[CONSENT GRANT] scopes=${scopes_csv} ttl=${ttl_seconds}"
      },
      {
        "action": "message",
        "label": "거부",
        "messageText": "[CONSENT DENY]"
      }
    ]
  }
}